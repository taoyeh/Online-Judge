@model Online_Judge.Models.ViewModels.Auth.LoginModel


@section Head {
    <link rel="stylesheet" href="~/lib/uikit/dist/css/uikit.min.css" />
}

<div style="width: 60%; margin: 0 auto; margin-top: 15%">
    <div class="uk-card uk-card-default uk-card-hover uk-card-body">
        <form method="post" asp-action="Login">
            <fieldset class="uk-fieldset">
                <legend class="uk-legend">登录</legend>

                <div asp-validation-summary="All" class="uk-text-danger" style="margin-top: 15px"></div>

                <div class="uk-margin">
                    <label class="uk-form-label" for="email-input" asp-for="Email">电子邮件地址</label>
                    <div class="uk-form-controls">
                        <input class="uk-input" id="email-input" type="text" placeholder="Email" asp-for="Email" value="admin">
                    </div>
                </div>

                <div class="uk-margin">
                    <label class="uk-form-label" for="password-input" asp-for="Password">密码</label>
                    <div class="uk-form-controls">
                        <input class="uk-input" id="password-input" type="password" placeholder="Password" asp-for="Password" value="admin">
                    </div>
                </div>

                <div class="uk-margin">
                    <button type="submit" class="uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom">登录</button>
                    <a class="uk-button uk-button-link" asp-action="Register">前往注册</a>
                </div>
            </fieldset>
        </form>
    </div>
</div>
